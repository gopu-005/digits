num = int(input('Enter a number : '))
if num <0 or num > 999:
  print(f'{num} is invalid entry. Valid range is 0 - 999')
else :
  if num < 10:
    print(f'{num} is single digit number')
  elif num < 100 :
    print(f'{num} is double digit number')
  else :
    print(f'{num} is triple digit number')
